<div class="user_sign_up">

</div>


<%= form_for :user, url: '/users' do |f| %>
<div class="sign_up_form">


<form class="bootstrap-form-with-validation">
        <h2 class="text-center">Create an account</h2>

        <div class="form-group has-success has-feedback">
            <label class="control-label" for="text-input">First Name</label>
            <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %></div>

        <div class="form-group has-success has-feedback">
          <label class="control-label" for="text-input">Last Name</label>
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %></div>

        <div class="form-group has-success has-feedback">
          <label class="control-label" for="text-input">Company Name</label>
            <%= f.text_field :company, class: "form-control", placeholder: "Company Name" %></div>

        <div class="form-group has-success has-feedback">
          <label class="control-label" for="text-input">Contractor Number</label>
            <%= f.text_field :contractor_number, class: "form-control", placeholder: "Contractor Number 4 numbers max" %></div>

        <div class="form-group has-success has-feedback">
            <label class="control-label" for="text-input">Phone Number</label>
              <%= f.text_field :phone_number, class: "form-control", placeholder: "phone_number" %></div>

        <div class="form-group has-success has-feedback">
            <label class="control-label" for="text-input">Email</label>
              <%= f.email_field :email, class: "form-control", placeholder: "email" %></div>

        <div class="form-group has-warning has-feedback">
            <label class="control-label" for="password-input">Password </label>
            <%= f.password_field :password, required: true, class: "form-control", placeholder: "password" %></div>

        <div class="form-group has-warning has-feedback">
            <label class="control-label" for="password-input">Password Conformation </label>
              <%= f.password_field :password_confirmation, required: true, class: "form-control", placeholder: "password confirmation" %></div>


        <div class="form-group has-warning">

            <%= f.submit "Submit", class: "btn btn-primary"%>
        </div>

        </div>
<% end %>
